<!DOCTYPE html>
<html lang="pt-br">
    <%- include('partials/head') %>
    <link rel="stylesheet" href="/stylesheets/profile.css">
    <link rel="stylesheet" href="/stylesheets/views.maneger.css">
    <body  class="bg-sky">
        <%- include('partials/header') %>
        <main class="container">
            <section class="content-section bgOnGradient">
                <div class="content-header">
                    <h3>Minhas categorias</h3>
                </div>
                <div class="content-body">
                    <div class="post-item">
                        <div class="bt-left">
                            <button class="btn btn-light" id="show_post_form">Nova categoria</button>
                        </div>
                        <form id="myForm" style="display: none;">
                            <div>
                                <label for="category_name">Nome da categoria</label>
                                <input type="text" class="input-group-text" name="category_name">
                            </div>
                            <div>
                                <button class="btn btn-light" type="submit">Adicionar</button>
                            </div>
                        </form>
                    </div>
    
                    <div class="list_items">
                        <ul></ul>
                    </div>
                </div>
                <nav class="mt-3">
                    <ul class="pagination justify-content-center">
                        <li class="page-item disabled">
                            <button type="button" class="page-link">Anterior</button>
                        </li>
                        <li class="page-item">
                            <button type="button" class="page-link">Proximo</button>
                        </li>
                    </ul>
                </nav>
            </section>
        </main>
        <div class="loader">
            <div class="loader-inner"></div>
        </div>
        <%- include('partials/footer') %>
        <script src="/javascripts/functions/category.crud.js"></script>
        <script src="/javascripts/categorys_list.js"></script>
    </body>
</html>
