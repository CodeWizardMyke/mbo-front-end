<form id="form-transaction" class="form_tr">
    <table>
        <thead>
            <th>Entrada de valor</th>
            <th>Valor selecionado</th>
        </thead>
        <tbody>
            <tr>
                <td>
                    <span class="span_list" id="span_list">Categorias já registradas
                        <ul></ul>
                    </span>
                </td>
                <td>
                    <span id="category_name"></span>
                    <input type="text" id="category_value" name="category_id"
                    placeholder="valor desejado" disabled>
                </td>
            </tr>
            <tr>
                <td>
                    <input type="text" class="input-group-text" name="new_category" id="new_category" placeholder="Criar uma nova categoria">
                </td>
                <td>
                    <span>O valor será adicionado ao salvar a transação</span>
                </td>
            </tr>
            <tr>
                <td>
                    <span class="span_list" id="span_transactions_list">Tipo de Transação
                        <ul>
                            <li>Despesa <input type="text" value="despesa"></li>
                            <li>Receita <input type="text" value="receita"></li>
                            <li>Cartão <input type="text" value="cartão"></li>
                            <li>Presente <input type="text" value="presente"></li>
                        </ul>
                    </span>
                </td>
                <td>
                    <span id="type_transaction"></span>
                    <input type="text" name="type" value="" class="d-none" id="type_tr">
                </td>
            </tr>
            <tr id="installments_line"></tr>
            <tr>
                <td>
                    <label for="date">Data da conta</label>
                </td>
                <td>
                    <input type="date" id="date" name="date" class="input-group-text" placeholder="dd/mm/aaaa" id="date">
                </td>
            </tr>
        </tbody>
    </table>
    <button class="btn btn-warning mt-3">Adicionar</button>
</form>