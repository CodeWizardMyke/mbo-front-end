<form id="form-transaction" class="form_tr">
    <table>
        <thead>
            <th>Entrada de valor</th>
            <th>Valor selecionado</th>
        </thead>
        <tbody>
            <tr id="category_listed">
                <td>
                    <span class="span_list" id="span_list">Categorias
                        <ul></ul>
                    </span>
                </td>
                <td>
                    <span id="category_name">Selecione uma categoria</span>
                    <input type="text" id="category_value" name="category_id"
                    placeholder="valor desejado" disabled>
                </td>
            </tr>
            <tr>
                <td>
                    <input type="text" class="input-group-text" name="new_category" id="new_category" placeholder="Criar categoria">
                </td>
                <td>
                    <span id="category_id_set">O valor será adicionado ao salvar a transação</span>
                </td>
            </tr>
            <tr>
                <td>
                    <span class="span_list" id="span_transactions_list">transação
                        <ul>
                            <li>Despesa <input type="text" value="despesa"></li>
                            <li>Receita <input type="text" value="receita"></li>
                            <li>Cartão <input type="text" value="cartão"></li>
                            <li>Presente <input type="text" value="presente"></li>
                        </ul>
                    </span>
                </td>
                <td>
                    <span id="type_set"> tipo de transaçao</span>
                    <input type="text" name="type" value="" class="d-none" id="type_tr">
                </td>
            </tr>
            <tr id="installments_line"></tr>
            <tr>
                <td>
                    <input type="date" id="date" name="date" class="input-group-text" placeholder="dd/mm/aaaa">
                </td>
                <td>
                    <span id="data_set">Data da conta</span>
                </td>
            </tr>
            <tr>
                <td>
                    <input type="number" id="amount" min="1" name="amount" class="input-group-text" placeholder="R$ 0,00">
                </td>
                <td>
                    <span id="amount_set">Valor da conta</span>
                </td>
            </tr>
        </tbody>
    </table>
    <button class="btn_box_ss" type="submit" >Adicionar</button>
</form>