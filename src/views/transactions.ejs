<!DOCTYPE html>
<html lang="pt-br">
    <%- include('partials/head') %>
    <link rel="stylesheet" href="/stylesheets/profile.css">
    <link rel="stylesheet" href="/stylesheets/transactions.css">
    <body>
        <%- include('partials/header') %>
        <main class="container">
            <section class="tr-content">
                <div class="nav-transactions" >
                    <h3>Listar transações</h3>
                    <div class="nav " >
                        <ul>
                            <li>
                                <label for="bt_get_all_transactions">Mostrar todas</label>
                                <button class="btn btn-light" type="button" id="bt_get_all_transactions">Transações</button>
                            </li>
                            <li>
                                <label for="type">Filtrar por tipo</label>
                                <select class="form-select" id="type">
                                    <option value="">Selecione</option>
                                    <option value="Expense" >Despesa</option>
                                    <option value="Revenue">Receita</option>
                                    <option value="card" >Cartão</option>
                                    <option value="Gift" >Presente</option>
                                </select>
                            </li>
                            <li>
                                <label for="category_list">Listar por categoria</label>
                                <select class="form-select" id="category_select_transaction">
                                    <option value="" >selecione</option>
                                </select>
                            </li>
                        </ul>
                    </div>
                </div>
                <div>
                    <div class="transactions-values">
                        <div>
                            <span>Saldo Atual</span>
                            <span>R$: 500.00</span>
                        </div>
                        <div>
                            <span>Balanço mensal</span>
                            <span>R$: 500.00</span>
                        </div>
                    </div>
                    <div class="transactions-listed">
                        <ul></ul>
                    </div>
                    <nav class="transaction-paginate">
                        <ul class="pagination justify-content-center">
                            <li class="page-item disabled">
                                <button type="button" class="page-link">Anterior</button>
                            </li>
                            <li class="page-item">
                                <button type="button" class="page-link">Proximo</button>
                            </li>
                        </ul>
                    </nav>
                </div>
            </section>
        </main>
        <div class="loader">
            <div class="loader-inner"></div>
        </div>
        <%- include('partials/footer') %>
        <script src="/javascripts/profile.user.js"></script>
        <script src="/javascripts/transactions.js"></script>
    </body>
</html>
