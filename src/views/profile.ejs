<!DOCTYPE html>
<html lang="pt-br">
    <%- include('partials/head') %>
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <link rel="stylesheet" href="/stylesheets/profile.css">
    <body class="bg-sky">
        <%- include('partials/header') %>
        <main class="container bgOnGradient">
            <section>
                <div class="content_top">
                    <div id="username">Carregando..</div>
                </div>
                <div class="content_botom">
                    <div class="side_bar ">
                        <div class="list_config">
                            <h4>Mudar dados da conta</h4>
                            <ul>
                               <li><button type="button" id="config-email">Email</button></li>
                               <li><button type="button" id="config-pass">Senha</button></li>
                               <li><button type="button" id="config-name">Nome usuário</button></li>
                            </ul>
                        </div>
                        <div>
                            <button type="button" class="btn_delete">deletar conta</button>
                        </div>
                    </div>
                    <div class="body_config">
                        <div class="content-c">
                            <div class="text-center">
                                <span>Atualizar dados</span>
                            </div>
                            <div class="now_data"></div>
                            <div class="form_put_config">
                                <form id="my_form">
                                    <div class="inner_inputs">
                                        <%- include('partials/profile.forms.ejs') %>
                                    </div>
                                    <div class="div_bt_save">
                                        <button type="submit">Salvar</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <div class="popup" id="popupMessage">
                <div>
                    <span>Tem certeza que deseja deletar sua conta ?</span>
                    <div class="btn_opt">
                        <button type="button" class="btn border" id="btn_del_false">Não</button>
                        <button type="button" class="btn btn-danger" id="btn_del_true">Sim</button>
                    </div>
                </div>
            </div>
        </main>
        <%- include('partials/footer') %>
        <script src="/javascripts/functions/user.crud.js"></script>
        <script src="/javascripts/profile.user.js"></script>
    </body>
</html>


